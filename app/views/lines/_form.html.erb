<%= form_for(@line, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @line.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@line.errors.count, "error") %> prohibited this line from being saved:</h4>

      <ul>
      <% @line.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t 'lines.name' %><font color="#a94442">*</font></label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t 'lines.code' %></label>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t 'lines.description' %></label>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t 'lines.enable' %></label>
    <div class="col-sm-10">
      <%= f.check_box :enable, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t('app.save'), class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
