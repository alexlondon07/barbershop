<div class="page-header">
  <%= link_to services_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t ('app.back') %>
  <% end %>
  <%= link_to edit_service_path(@service), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    <%= t ('app.edit') %>
  <% end %>
  <h1><%= t 'services.show.title' %></h1>
</div>

<dl class="dl-horizontal">

  <dt><%= t('services.barber_shop') %>:</dt>
  <dd><%= @service.barber_shop.name %></dd>

  <dt><%= t('services.name') %>:</dt>
  <dd><%= @service.name %></dd>

  <dt><%= t('services.code') %>:</dt>
  <dd><%= @service.code %></dd>

  <dt><%= t('services.price') %>:</dt>
  <dd><%= @service.price %></dd>

  <dt><%= t('services.description') %>:</dt>
  <dd><%= @service.description %></dd>

  <dt><%= t('services.enable') %>:</dt>
  <dd><%= @service.enable %></dd>

</dl>
